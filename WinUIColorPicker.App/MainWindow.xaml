<Window
    x:Class="WinUIColorPicker.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Se establece MicaBackdrop como el material de fondo para toda la ventana. -->
    <!-- Este es el lugar correcto para definir los materiales del sistema. -->
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <!-- El Frame ahora se dibujarÃ¡ sobre el fondo de Mica. -->
    <Frame x:Name="MyFrame"/>

</Window>
